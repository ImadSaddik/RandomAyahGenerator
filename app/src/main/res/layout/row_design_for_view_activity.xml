<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="?attr/backgroundColor"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="0dp"
        android:paddingEnd="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rowViewActivityDeleteButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/delete_data_icon" />

            <ImageView
                android:id="@+id/rowViewActivityCancelButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:visibility="gone"
                app:srcCompat="@drawable/cancel_icon"
                tools:visibility="gone" />

            <ImageView
                android:id="@+id/rowViewActivityConfirmButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:visibility="gone"
                app:srcCompat="@drawable/confirm_icon"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/rowViewActivityTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/app_name_arabic"
                android:textAlignment="textStart"
                android:textColor="?attr/textPrimaryColor"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/rowViewActivityAyahNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/app_name_arabic"
            android:textAlignment="textStart"
            android:textColor="?attr/textSecondaryColor" />

        <TextView
            android:id="@+id/rowViewActivityContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/app_name_arabic"
            android:textAlignment="textStart"
            android:layout_marginTop="8dp"
            android:textSize="20sp"
            android:textColor="?attr/textPrimaryColor" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/quran_icon" />
</LinearLayout>