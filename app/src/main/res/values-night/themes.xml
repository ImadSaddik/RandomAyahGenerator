<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RandomAyahGenerator" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="textPrimaryColor">@color/white</item>
        <item name="backgroundColor">@color/background_color_dark</item>
        <item name="iconColor">@color/icon_color_dark</item>
        <item name="textSecondaryColor">@color/text_emphasis_color_dark</item>
        <item name="buttonBackgroundColor">@color/button_background_color_light</item>
        <item name="dialogBackgroundColor">@color/dialog_background_color_dark</item>
        <item name="ayahCardBackgroundColor">@color/ayah_card_background_color_dark</item>

        <!-- Custom styles-->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>

    <!-- Theme for buttons -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorContainer">?attr/buttonBackgroundColor</item>
        <item name="colorOnContainer">@color/white</item>
    </style>
</resources>